<Page x:Class="MyUnoXamlApp.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyUnoXamlApp.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:wctk="using:CommunityToolkit.WinUI.Converters"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <Page.Resources>
    <wctk:StringVisibilityConverter x:Key="StringToVisibleConverter"/>
  </Page.Resources>
  <ScrollViewer x:Name="svControl">
    <Grid x:Name="GridControlInScrollViewer" utu:SafeArea.Insets="VisibleBounds">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <utu:NavigationBar x:Name="HeadNavigationBar"
                         Content="{x:Bind vm.Title, Mode=OneWay}" />

      <StackPanel x:Name="ContentStackPanel" Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Spacing="10">
        <!--<myControlLib:TextBoxWithRequiredInput/>-->
        <TextBox x:Name="tbName"
                 Text="{Binding Name, Mode=TwoWay}" 
                 PlaceholderText="Enter your name:"
                 BorderBrush="{StaticResource ResourceKey=error}">
        </TextBox>
        <Button x:Name="StartButton"
                Content="Start a cool simple Game!"
                AutomationProperties.AutomationId="SecondPageButton"
                Command="{x:Bind vm.GoToStart}"
                HorizontalAlignment="Stretch"
                Visibility="{x:Bind tbName.Text, Converter={StaticResource StringToVisibleConverter}, Mode=OneWay}"/>
        <Button x:Name="SomeButton"
                Content="One More Button"
                Click="{x:Bind ShowMyDialog}"
                HorizontalAlignment="Stretch"/>
        <!--<<DropDownButton x:Name="DropThatDown"
                        Content="Lets Drop that down!">
          DropDownButton.Flyout>
            <MenuFlyout Placement="Bottom">
                <MenuFlyoutItem Text="Lets go right!"
                                Click="{Binding }">
                <MenuFlyoutItem.Icon>
                  <FontIcon Glyph="&#xE72A;"/>
                </MenuFlyoutItem.Icon>
              </MenuFlyoutItem>
              <MenuFlyoutItem Text="Lets go left!">
                <MenuFlyoutItem.Icon>
                  <FontIcon Glyph="&#xE72B;"/>
                </MenuFlyoutItem.Icon>
              </MenuFlyoutItem>
              <MenuFlyoutItem Text="Lets turn around!">
                <MenuFlyoutItem.Icon>
                  <FontIcon Glyph="&#xE72C;"/>
                </MenuFlyoutItem.Icon>
              </MenuFlyoutItem>
            </MenuFlyout>
          </DropDownButton.Flyout>
        </DropDownButton>-->
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
